        </activity>
        <activity
                android:name=".PrivacyPolicyFR"
                android:label="@string/PrivacyPolicyFR"
                android:theme="@style/Theme.AppCompat.Light.ActionBar">
        </activity>
        <activity
                android:name=".SettingsPage"
                android:label="@string/Settings"
                android:theme="@style/MyTheme.Splash">
        </activity>
        <activity
                android:name=".ImageViewPage"
                android:label="@string/CarDetail"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
    </application>

</manifest>